<div class="container">
  <% if flash[:notice] %>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/create', book: @new_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td align="center">
              <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td align="center">
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td align="center"><%= @book.body %></td>
            <td align="center">
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
              <% end %>
            </td>
            <td align="center">
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
