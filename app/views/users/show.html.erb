<h1>User Info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
<table border="1" width="500" cellspacing="0" cellpadding="5">
  <tr>
    <td align="center" nowrap>name</td>
    <td valign="top"><%= @user.name %></td>
  </tr>
  <tr>
    <td align="center" nowrap>introduction</td>
    <td valign="top"><%= @user.introduction %></td>
  </tr>
</table>
<p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <div class="input-group mb-3 mt-4">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="field">
    <%= f.label :opinion %><br />
    <%= f.text_area :opinion, class:"form-control", rows:"2" %>
  </div>
  <br>
  <%= f.submit 'Create Book', class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>

<h1>Books</h1>
<table border="1" width="500" cellspacing="0" cellpadding="5">
  <tr>
    <th align="center">Title</td>
    <th valign="top">Opinion</td>
  </tr>
  <tr>
    <td align="center"></td>
    <td valign="top"></td>
  </tr>
</table>
