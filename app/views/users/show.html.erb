<div class="container">
  <% if flash[:notice] %>
    <div id="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'books/create', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <%= render 'books/list', books: @books %>
    </div>
  </div>
</div>
