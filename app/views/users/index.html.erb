<%= render 'users/info', user: @user %>
<%= render 'books/create', book: @book %>

<h1>Users</h1>
<table border="1" width="500" cellspacing="0" cellpadding="5">
  <thead>
    <tr>
      <th align="center">image</td>
      <th align="center">name</td>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
        <tr>
          <td align="center"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
          <td align="center"><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      <% end %>
  </tbody>
</table>
