<h2>User Info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
<table class="table">
  <tr>
    <td align="center" nowrap>name</td>
    <td valign="top"><%= user.name %></td>
  </tr>
  <tr>
    <td align="center" nowrap>introduction</td>
    <td valign="top"><%= user.introduction %></td>
  </tr>
</table>
    <%= link_to edit_user_path(user), class: "btn btn-block btn-sm btn-outline-secondary mt-5 mb-3" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>

